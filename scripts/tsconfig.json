{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "types": ["node"],
    "baseUrl": "..",
    "paths": {
      "@dating-app/shared": ["shared/src/index"]
    }
  },
  "include": ["**/*.ts", "../shared/src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}

